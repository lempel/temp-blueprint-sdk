<?xml version="1.0" encoding="euc-kr"?>
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="Console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p %t %c - %m%n"/>
        </layout>
    </appender>

    <appender name="LogFile"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${LOG_PATH}/kesa.log"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p %t %c - %m%n"/>
        </layout>
    </appender>

    <appender name="DeferredLogFile"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${LOG_PATH}/deferred.log"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p %t %c - %m%n"/>
        </layout>
    </appender>

    <logger name="DeferredLogger">
        <level
                value="deferred#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="DeferredLogFile"/>
    </logger>

    <logger name="ASYNCLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="BatchLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="OLTPLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="JMSLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="LogLog">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="ChannelAuditLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="DTOLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>
    <logger name="FailedEventLogger">
        <level value="error#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <!-- Version 1.1 added Logger -->
    <logger name="ChannelInterfaceLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>
    <logger name="BizInterfaceLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>
    <logger name="SystemInterfaceLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="org.hibernate">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <logger name="WFPLogger">
        <level value="debug#com.kbstar.ksa.logging.levels.CustomLevel"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>

    <!-- WSE log -->
    <logger name="com.kbstar.wse.log.AuthLog">
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
    </logger>
    <logger name="com.kbstar.wse">
        오호호호
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>아하하하
    </logger>
</log4j:configuration>